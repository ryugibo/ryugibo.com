{
  "name": "ryugibo.com",
  "private": true,
  "scripts": {
    "prepare": "is-ci || husky",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:den": "turbo run dev --filter=den",
    "dev:wemake": "turbo run dev --filter=wemake",
    "lint": "turbo run lint",
    "format": "biome check .",
    "format:fix": "biome check . --write",
    "check-types": "biome check . --error-on-warnings && turbo run check-types"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "drizzle-kit": "^0.31.8",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "tailwindcss": "^4.1.18",
    "turbo": "^2.7.6",
    "tw-animate-css": "^1.4.0",
    "type-fest": "^5.4.1",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=18"
  }
}
