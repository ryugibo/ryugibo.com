{
  "name": "ryugibo.com",
  "private": true,
  "scripts": {
    "prepare": "is-ci || husky",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:accounts": "turbo run dev --filter=accounts",
    "dev:den": "turbo run dev --filter=den --filter=accounts --filter=den-api",
    "dev:wemake": "turbo run dev --filter=wemake --filter=accounts",
    "dev:@emails": "turbo run dev --filter=@ryugibo/emails",
    "lint": "turbo run lint",
    "format": "biome check .",
    "format:fix": "biome check . --write",
    "check-types": "biome check . --error-on-warnings && turbo run check-types"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/node": "^25.2.0",
    "drizzle-kit": "^0.31.8",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "tailwindcss": "^4.1.18",
    "turbo": "^2.8.7",
    "tw-animate-css": "^1.4.0",
    "type-fest": "^5.4.3",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.29.2",
  "pnpm": {
    "overrides": {
      "@types/node": "$@types/node"
    },
    "onlyBuiltDependencies": ["@parcel/watcher", "esbuild", "sharp", "supabase", "workerd"]
  },
  "engines": {
    "node": "24.13.0",
    "pnpm": ">=10"
  }
}
